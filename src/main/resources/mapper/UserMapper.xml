<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.android.Mapper.UserMapper">
    <!--    회원가입-->
    <insert id="join">
        insert into user_tb(u_id, u_email, u_pwd, u_phone, u_reg_dt)
        values(#{u_id}, #{u_email}, #{u_pwd}, #{u_phone}, sysdate)
    </insert>

    <!--    로그인-->
    <select id="loginUser" resultType="com.example.android.Dto.User">
        select *
        from user_tb
        where u_id= #{u_id} and u_pwd= #{u_pwd}
    </select>

    <!--    회원정보 수정-->
    <update id="updateUser">
        update user_tb
        set u_pwd= #{u_pwd}
        where u_id =#{u_id}
    </update>
    <!-- asdfasdfasdfasdfasdf-->
    <!--    회원정보 찾기-->
    <select id="getProfile" resultType="com.example.android.Dto.User">
        select *
        from user_tb
        where u_id = #{u_id}
    </select>

    <!--    회원정보 찾기-->
    <select id="getUser" resultType="com.example.android.Dto.User">
        select *
        from user_tb
        where u_id = #{u_id}
    </select>

    <!--    아이디 찾기-->
    <select id="FindUser" resultType="com.example.android.Dto.User">
        select *
        from user_tb
        where u_email = #{u_email}
    </select>

</mapper>